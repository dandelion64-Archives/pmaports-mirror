# Reference: <https://postmarketos.org/devicepkg>
# Maintainer: Ferass El Hafidi <vitali64pmemail@protonmail.com>
pkgname=device-librecomputer-lepotato
pkgdesc="Libre Computer AML-S905X-CC-V1.0"
pkgver=0.1
pkgrel=1
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	linux-postmarketos-amlogic
	postmarketos-base
	soc-amlogic-s905
	u-boot-librecomputer-lepotato
"
makedepends="devicepkg-dev"

_ucm_commit="465b5d8f79dfa962b442451baeedb37269f057f1"
source="
	deviceinfo
	modules-initfs
	alsa-ucm-conf-$_ucm_commit::https://github.com/libre-computer-project/alsa-ucm-conf/archive/$_ucm_commit.zip
"
subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
	$pkgname-ucm:ucm
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="vdec firmware"
	depends="linux-firmware-amlogic"
	mkdir "$subpkgdir"
}

ucm() {
	provides="alsa-ucm-conf"
	provider_priority=1

	mkdir -p "$subpkgdir"/usr/share/alsa/ucm2
	cp -r "$srcdir/alsa-ucm-conf-$_ucm_commit"/ucm2 "$subpkgdir"/usr/share/alsa
}

