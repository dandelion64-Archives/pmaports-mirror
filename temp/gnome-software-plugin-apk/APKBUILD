# Forked from Alpine to fix dependency handling in pmbootstrap

pkgname=gnome-software-plugin-apk
pkgver=9999
_commit=53b7afc72da0cc60a00f0f8666bfeae110dd889a
pkgrel=3
pkgdesc="APK plugin for GNOME Software"
url="https://github.com/Cogitri/gnome-software-plugin-apk"
arch="x86_64 armv7 aarch64 x86 ppc64le" # apk-polkit-rs
license="GPL-2.0-or-later"
makedepends="meson gnome-software-dev apk-polkit-rs-dev"
checkdepens="py3-dbusmock"
options="!check" # tests will fail if gnome-software-plugin-apk is installed
subpackages="$pkgname-dbg"
source="https://github.com/Cogitri/gnome-software-plugin-apk/archive/$_commit.tar.gz"
install_if="gnome-software"
builddir="$srcdir/$pkgname-$_commit"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

check() {
	meson test --no-rebuild -C output
}

sha512sums="
b4ac56ec0d5fe4c8704bfa70c0e81827aec118b4b45cfebc5395c5860852bdc4b35d39dc941711a9b03128cb463f4a8167ecab411d4faee5a88180a880d8fcf3  53b7afc72da0cc60a00f0f8666bfeae110dd889a.tar.gz
"
